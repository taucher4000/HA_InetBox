{
  "name": "Heating",
  "unique_id": "heating",
  "modes": ["off", "heat"],
  "fan_modes": ["low", "high"],
  "min_temp": 5,
  "max_temp": 30,
  "temp_step": 1,
  "initial": 22,
  "optimistic": true,
  "icon": "mdi:radiator",
  "mode_command_topic": "service/truma/set/heating_mode",
  "mode_command_template": "{% if value=='heat' %}eco{% elif value=='off' %}off{% endif %}",
  "mode_state_topic": "service/truma/control_status/heating_mode",
  "mode_state_template": "{% if value=='eco' %}heat{% elif value=='off' %}off{% endif %}",
  "temperature_command_topic": "service/truma/set/target_temp_room",
  "temperature_command_template": "{{ value | int }}",
  "temperature_state_topic": "service/truma/control_status/target_temp_room",
  "temperature_state_template": "{{ value | int }}",
  "fan_mode_command_topic": "service/truma/set/heating_mode",
  "fan_mode_command_template": "{% if value=='low' %}eco{% else %}boost{% endif %}",
  "fan_mode_state_topic": "service/truma/control_status/heating_mode",
  "fan_mode_state_template": "{% if value == 'boost' %}high{% else %}low{% endif %}"
}